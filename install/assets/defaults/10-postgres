#!/command/with-contenv bash

DATA_PATH=${DATA_PATH:-"/var/lib/postgresql/data/"}
##
CERT_PATH=${CERT_PATH:-"/certs/"}
CONFIG_FILE=${CONFIG_FILE:-"postgresql.conf"}
CONFIG_MODE=${CONFIG_MODE:-"DEFAULT"}
CONFIG_PATH=${CONFIG_PATH:-"${DATA_PATH}"}
CONFIG_CUSTOM_PATH=${CONFIG_CUSTOM_PATH:-"${CONFIG_PATH}/conf.d"}
CREATE_DB=${CREATE_DB:-"TRUE"}
ENABLE_DATA_CHECKSUMS=${ENABLE_DATA_CHECKSUMS:-"FALSE"}
ENABLE_REPLICATION=${ENABLE_REPLICATION:-"FALSE"}
HBA_FILE=${HBA_FILE:-"pg_hba.conf"}
IDENT_FILE=${IDENT_FILE:-"pg_ident.conf"}
INITDB_ENCODING=${INITDB_ENCODING:-"UTF-8"}
INITDB_LC_COLLATE=${INITDB_LC_COLLATE:-"C"}
INITDB_LC_CTYPE=${INITDB_LC_CTYPE:-"C"}
INITDB_LOCALE=${INITDB_LOCALE:-"C"}
LISTEN_IP=${LISTEN_IP:-"*"}
LISTEN_PORT=${LISTEN_PORT:-"5432"}
LOG_FILE=${LOG_FILE:-"postgresql.log"}
LOG_FORMAT=${LOG_FORMAT:-"NORMAL"}
LOG_PATH=${LOG_PATH:-"/logs/"}
LOG_TYPE=${LOG_TYPE:-"FILE"}
LOG_LEVEL=${LOG_LEVEL:-"WARNING"}
LOG_LEVEL_ERROR_STATEMENT=${LOG_LEVEL_ERROR_STATEMENT:-"ERROR"}
MAX_CONNECTIONS=${MAX_CONNECTIONS:-"100"}
MONITOR_PASS=${MONITOR_PASS:-"zabbix"}
MONITOR_USER=${MONITOR_USER:-"zbx_monitor"}
REPLICATION_IP_ALLOW=${REPLICATION_IP_ALLOW:-"0.0.0.0/0"}
REPLICATION_MODE=${REPLICATION_MODE:-"main"}
REPLICATION_PORT=${REPLICATION_PORT:-"5432"}
REPLICATION_TLS_MODE=${REPLICATION_TLS_MODE:-"prefer"}
REPLICATION_USER=${REPLICATION_USER:-"replicate"}
SETUP_MODE=${SETUP_MODE:-"AUTO"}
SUPERUSER_USER=${SUPERUSER_USER:-"postgres"}
WAL_SEGMENT_SIZE_MB=${WAL_SEGMENT_SIZE_MB:-"16"}